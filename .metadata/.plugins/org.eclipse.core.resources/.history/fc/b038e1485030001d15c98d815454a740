package programs;

import java.nio.file.Path;
import java.nio.file.Paths;

public class CompareFolders {
	
	public static void main(String[] args) {
		
		Path a = Paths.get("testdataa\\fila.txt"),
				b = Paths.get("testdataa\\filb.txt"),
				c = Paths.get("testdatab\\filc.txt");
		
		a = a.toAbsolutePath();
		b = b.toAbsolutePath();
		c = c.toAbsolutePath();
		
		//compare a and c
		if(a.getNameCount() == c.getNameCount()) {
			for(int i = 0; i < a.getNameCount()-1; ++i) {
				if(!a.getName(i).equals(b.getName(i))) {
					System.out.println("a and c do not belong to the same folder"); 
				}
			}
		} else { 
			System.out.println("a and c do not belong to the same folder"); 
		}
	}
	
}
