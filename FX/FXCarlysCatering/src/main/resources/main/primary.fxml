<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.PrimaryController">
   <padding>
      <Insets bottom="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Entree" textFill="WHITE" />
      <HBox fx:id="entreeBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: RED;" />
      <Label text="Side 1" textFill="WHITE" />
      <HBox fx:id="side1Box" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: ORANGE;" />
      <Label text="Side 2" textFill="WHITE" />
      <HBox fx:id="side2Box" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: Yellow;" />
      <Label text="Dessert" textFill="WHITE" />
      <HBox fx:id="dessertBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: lime;" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: blue;">
         <children>
            <Label text="Enter # of Guests:" textFill="WHITE" />
            <TextArea fx:id="guestIn" prefHeight="39.0" prefWidth="70.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: purple;">
         <children>
            <Label fx:id="outLbl" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#calcPrice" text="Enter" />
         </children>
      </HBox>
   </children>
</VBox>
